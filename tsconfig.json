{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "public",
        "lib": ["ESNext", "DOM"],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "exclude": ["node_modules"]
}
